@model IEnumerable<TarjetaDeCreditoMVC.Entidades.ViewModels.TipoDeDocumento.TipoDeDocumentoListViewModel>

@{
    ViewBag.Title = "Index";
}
<div>
    <a href="@Url.Action("Create","TiposDeDocumentos")" class="btn btn-primary" style="float:right">Nuevo</a>
    <h2>Lista de tipos de documentos</h2>
</div>
<hr />
@if (TempData["Msg"] != null)
{
    var msg = TempData["Msg"].ToString();
<div class="alert alert-success alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Guardado correctamente</strong> @msg
</div>
}
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.TipoDeDocumentoId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.TipoDeDocumentoId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
